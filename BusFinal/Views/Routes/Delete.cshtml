@model BusFinal.Models.Route

@{
    ViewData["Title"] = "Delete Route";
}



<h3>Are you sure you want to delete this Route ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PickUp)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PickUp.City)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DropOff)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DropOff.City)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        @if (ViewBag.Message != null)
        {
            <span class="alert alert-warning"> @ViewBag.Message!</span>
        }
        else
        {
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
