@model IEnumerable<BusFinal.Models.Station>

@{
    ViewData["Title"] = "Stations";
}

<div class="row">
    <div class="col-sm-12 col-md-10">
        <h2>Stations</h2>
    </div>
    <div class="col-sm-12 col-md-2">
        <h1><a class="btn btn-success" asp-action="Create"><i class="fa fa-plus"></i> Add New</a></h1>
    </div>
</div>
@*<h1>Stations
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus"></i> Add New</a>
</h1>*@

<table class="table table-striped table-bordered" id="dataTable" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="no-sort">
                
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-light" asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a> 
                <a class="btn btn-light" asp-action="Details" asp-route-id="@item.ID"><i class="fa fa-eye"></i></a> 
                <a class="btn btn-light" asp-action="Delete" asp-route-id="@item.ID"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
